<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardElevation="@dimen/margin_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_profile_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5dp">

                <com.gabbarstalk.utils.CircularImageView
                    android:id="@+id/profile_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    app:border_ci="true"
                    app:border_color_ci="@color/colorPrimary"
                    app:border_width_ci="@dimen/margin_2dp"
                    app:shadow_ci="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        fontPath="fonts/sofia_pro_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:paddingLeft="@dimen/margin_5dp"
                        android:paddingRight="@dimen/margin_5dp"
                        android:text="Username"
                        android:textColor="#828282"
                        android:textSize="@dimen/text_16sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tv_video_caption"
                        fontPath="fonts/sofia_pro_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_5dp"
                        android:paddingRight="@dimen/margin_5dp"
                        android:text="Caption"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/text_14sp"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_50dp">

                <ImageView
                    android:id="@+id/img_video_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_200dp"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:background="@color/md_black_1000" />

                <ImageView
                    android:id="@+id/img_video_play"
                    android:layout_width="@dimen/margin_50dp"
                    android:layout_height="@dimen/margin_50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_circle" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_50dp"
                android:layout_marginTop="@dimen/margin_10dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_favorite_red" />
                <!--android:src="@drawable/like_selector" />-->

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Likes: 1234"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_share" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
